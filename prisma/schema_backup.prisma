generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  name              String?
  role              UserRole   @default(STUDENT)
  avatar            String?
  bio               String?
  phoneNumber       String?
  timezone          String     @default("UTC")
  status            UserStatus @default(ACTIVE)
  lastLoginAt       DateTime?
  preferredLanguage String     @default("en-US")
  createdAt         DateTime   @default(now())
updatedAt         DateTime   @updatedAt

  // Gamification fields
  xp                Int        @default(0)
  level             Int        @default(1)
  streak            Int        @default(0)
  longestStreak     Int        @default(0)
  lastActiveDate    DateTime?

  // Relations
  learningGoals       LearningGoal[]
  roadmaps            Roadmap[]
  chatSessions        ChatSession[]
  quizAttempts        QuizAttempt[]
  progress            Progress[]
  accounts            Account[]
  sessions            Session[]
  studentProfile      StudentProfile?
  nodeAssessments     NodeAssessment[]
  tutorAssignmentsAsStudent TutorAssignment[] @relation("StudentAssignments")
  tutorAssignmentsAsTutor   TutorAssignment[] @relation("TutorAssignments")
auditLogs           AuditLog[]
  badges              Badge[]
  achievements        Achievement[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Student Learning Profile (SLP) - captures learning preferences
model StudentProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  learningGoal     String   // what they want to achieve
  currentLevel     String   // beginner, intermediate, etc.
  preferredPace    String   // slow, moderate, fast
  timeAvailability String   // daily hours available
  learningStyle    String   // visual, hands-on, theory, mixed
  targetOutcome    String   // exam, job, project, mastery
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LearningGoal {
  id               String   @id @default(cuid())
  userId           String
  title            String
  description      String?
  subject          String
  targetLevel      String   // beginner, intermediate, advanced
  timeCommitment   Int      // minutes per week
  targetCompletion DateTime?
  status           GoalStatus @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roadmaps Roadmap[]
}

model Roadmap {
  id             String   @id @default(cuid())
  userId         String
  learningGoalId String
  title          String
  description    String?
  totalSteps     Int
  estimatedHours Int
  difficulty     String
  roadmapType    RoadmapType @default(PERSONALIZED)
  status         RoadmapStatus @default(DRAFT)
  generatedBy    String   // AI model used
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  learningGoal    LearningGoal      @relation(fields: [learningGoalId], references: [id], onDelete: Cascade)
  steps           RoadmapStep[]
  progress        Progress[]
  tutorAssignments TutorAssignment[]
}

model RoadmapStep {
  id               String     @id @default(cuid())
  roadmapId        String
  title            String
  description      String
  content          String?    // detailed learning content (AI generated)
  order            Int
  type             StepType   @default(TOPIC)
  difficulty       String
  estimatedMinutes Int
  prerequisites    String     // JSON string array of step IDs
  resources        Json?      // links, videos, etc.
  status           StepStatus @default(LOCKED)
  masteryThreshold Int        @default(70)  // percentage needed to pass
  currentScore     Int        @default(0)   // latest assessment score
  attempts         Int        @default(0)   // number of assessment attempts
  positionX        Int        @default(0)   // visual roadmap X position
  positionY        Int        @default(0)   // visual roadmap Y position
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  roadmap      Roadmap           @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  progress     Progress[]
  assessments  NodeAssessment[]
}

// Node Assessment - tracks each assessment attempt for a step
model NodeAssessment {
  id          String   @id @default(cuid())
  userId      String
  stepId      String
  score       Int      // 0-100
  passed      Boolean
  answers     Json     // student's answers
  feedback    Json?    // AI feedback
  timeSpent   Int      // seconds
  attemptNumber Int
  createdAt   DateTime @default(now())

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  step RoadmapStep @relation(fields: [stepId], references: [id], onDelete: Cascade)
}

// Tutor Assignment - when student escalates to human tutor
model TutorAssignment {
  id            String   @id @default(cuid())
  studentId     String
  tutorId       String?
  roadmapId     String
  blockedNodes  String[] // step IDs that need tutor help
  reason        String?  // why tutoring is needed
  sessionCount  Int      @default(1)
  focusAreas    String?  // specific topics to cover
  status        TutorAssignmentStatus @default(PENDING)
  tutorNotes    String?
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  student  User    @relation("StudentAssignments", fields: [studentId], references: [id], onDelete: Cascade)
  tutor    User?   @relation("TutorAssignments", fields: [tutorId], references: [id])
  roadmap  Roadmap @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  context   Json?    // conversation context, roadmap step, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
}

model ChatMessage {
  id         String      @id @default(cuid())
  sessionId  String
  role       MessageRole
  content    String
  metadata   Json?       // sources, confidence, etc.
  createdAt  DateTime    @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Quiz {
  id          String     @id @default(cuid())
  title       String
  description String?
  subject     String
  difficulty  String
  questionType QuestionType @default(MULTIPLE_CHOICE)
  questions   Json       // array of question objects
  timeLimit   Int?       // minutes
  passingScore Int       // percentage
  generatedBy String     // AI model used
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  attempts QuizAttempt[]
}

model QuizAttempt {
  id          String   @id @default(cuid())
  userId      String
  quizId      String
  answers     Json     // user's answers
  score       Int      // percentage
  passed      Boolean
  timeSpent   Int      // minutes
  feedback    Json?    // detailed feedback
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Progress {
  id           String   @id @default(cuid())
  userId       String
  roadmapId    String?
  stepId       String?
  percentage   Float    @default(0)
  timeSpent    Int      @default(0) // minutes
  lastAccessed DateTime @default(now())
  completed    Boolean  @default(false)
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  roadmap Roadmap?     @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  step    RoadmapStep? @relation(fields: [stepId], references: [id], onDelete: Cascade)
}

enum UserRole {
  STUDENT
  TUTOR
  ADMIN
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  PAUSED
  CANCELLED
}

enum RoadmapType {
  PERSONALIZED    // AI-generated unique roadmap per student
  STANDARDIZED    // Template-based with AI adaptation
}

enum RoadmapStatus {
  DRAFT
  ACTIVE
  COMPLETED
  ARCHIVED
  PAUSED          // When tutoring is requested
}

enum StepType {
  TOPIC
  EXERCISE
  QUIZ
  PROJECT
  REVIEW
}

enum StepStatus {
  LOCKED
  AVAILABLE
  IN_PROGRESS
  COMPLETED
  NEEDS_REVIEW      // Failed assessment, needs remediation
  TUTOR_REQUIRED    // Escalated to human tutor
}

enum TutorAssignmentStatus {
  PENDING           // Waiting for admin to assign
  ASSIGNED          // Tutor assigned but not started
  IN_PROGRESS       // Tutoring in progress
  COMPLETED         // Tutoring done, awaiting AI reassessment
  REASSESSING       // AI reassessing after tutoring
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  ESSAY
  CODING
